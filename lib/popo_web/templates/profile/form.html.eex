<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :dob %>
  <%= date_select f, :dob %>
  <%= error_tag f, :dob %>

  <%= label f, :gender %>
  <%= text_input f, :gender %>
  <%= error_tag f, :gender %>

  <%= label f, :intro %>
  <%= textarea f, :intro %>
  <%= error_tag f, :intro %>

  <%= label f, :photo %>
  <%= text_input f, :photo %>
  <%= error_tag f, :photo %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
